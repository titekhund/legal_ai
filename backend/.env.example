# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Environment (dev, staging, prod)
ENVIRONMENT=dev

# Logging
LOG_LEVEL=INFO

# LLM Configuration - Gemini (Primary)
GEMINI_API_KEY=your_gemini_api_key_here

# LLM Configuration - Claude (Optional Fallback)
CLAUDE_API_KEY=your_claude_api_key_here

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Tax Code Configuration
TAX_CODE_PATH=data/tax_code/tax_code.pdf

# Conversation Settings
MAX_CONVERSATION_HISTORY=50

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Vector Database Configuration (Optional)
VECTOR_DB_TYPE=pinecone
PINECONE_API_KEY=your_pinecone_key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=legal-ai-tax-code

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/legal_ai
